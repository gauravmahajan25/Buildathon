<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet id="add_fk_fare_operator_id" author="chooseacab">
		<addForeignKeyConstraint baseColumnNames="cc_operator_id"
			baseTableName="cc_fare_details" constraintName="fk_fare_operator_id"
			onDelete="CASCADE" onUpdate="RESTRICT" referencedColumnNames="id"
