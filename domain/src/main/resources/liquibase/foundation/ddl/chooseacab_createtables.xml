<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet id="create_cc_operators" author="chooseacab">
		<createTable tableName="cc_operators">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar(50)">
				<constraints unique="true" nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="create_cc_types" author="chooseacab">
		<createTable tableName="cc_types">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar(50)">
				<constraints unique="true" nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="create_cc_locations" author="chooseacab">
		<createTable tableName="cc_locations">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar(70)">
				<constraints unique="true" nullable="false" />
			</column>
			<column name="zip" type="int">
				<constraints unique="true" nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="create_cc_fare_details" author="chooseacab">
		<createTable tableName="cc_fare_details">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="cc_operator_id" type="int">
				<constraints nullable="false" />
			</column>
			<column name="cc_type_id" type="int">
				<constraints nullable="false" />
			</column>
			<column name="fare" type="decimal">
				<constraints nullable="false" />
			</column>
			<column name="discount" type="int">
			</column>
		</createTable>
	</changeSet>

	<changeSet id="create_cc_ride_details" author="chooseacab">
		<createTable tableName="cc_ride_details">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="cc_source_loc_id" type="int">
				<constraints nullable="false" />
			</column>
			<column name="cc_destination_loc_id" type="int">
				<constraints nullable="false" />
			</column>
			<column name="cc_fare_id" type="int">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>

	<!-- Adding Foreign Key Constraints -->
	<changeSet id="add_fk_fare_operator_id" author="chooseacab">
		<addForeignKeyConstraint baseColumnNames="cc_operator_id"
			baseTableName="cc_fare_details" constraintName="fk_fare_operator_id"
			deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
			onUpdate="RESTRICT" referencedColumnNames="id" referencedTableName="cc_operators" />
	</changeSet>
	
	<changeSet id="add_fk_fare_type_id" author="chooseacab">
		<addForeignKeyConstraint baseColumnNames="cc_type_id"
			baseTableName="cc_fare_details" constraintName="fk_fare_type_id"
			deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
			onUpdate="RESTRICT" referencedColumnNames="id" referencedTableName="cc_types" />
	</changeSet>
	
	<changeSet id="add_fk_ride_source_loc_id" author="chooseacab">
		<addForeignKeyConstraint baseColumnNames="cc_source_loc_id"
			baseTableName="cc_ride_details" constraintName="fk_ride_source_loc_id"
			deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
			onUpdate="RESTRICT" referencedColumnNames="id" referencedTableName="cc_locations" />
	</changeSet>
	
	<changeSet id="add_fk_ride_destination_loc_id" author="chooseacab">
		<addForeignKeyConstraint baseColumnNames="cc_destination_loc_id"
			baseTableName="cc_ride_details" constraintName="fk_ride_destination_loc_id"
			deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
			onUpdate="RESTRICT" referencedColumnNames="id" referencedTableName="cc_locations" />
	</changeSet>
	
	<changeSet id="add_fk_ride_fare_id" author="chooseacab">
		<addForeignKeyConstraint baseColumnNames="cc_fare_id"
			baseTableName="cc_ride_details" constraintName="fk_ride_fare_id"
			deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
			onUpdate="RESTRICT" referencedColumnNames="id" referencedTableName="cc_fare_details" />
	</changeSet>

</databaseChangeLog>