<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>


    <groupId>com.chooseacab-ui</groupId>
    <artifactId>chooseacab-ui</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <!-- war is generated by grunt build -->
    <packaging>pom</packaging>
    <name>Choose A Cab UI</name>
    <description>Chooseacab UI</description>

    <parent>
        <groupId>com.chooseacab</groupId>
        <artifactId>chooseacab</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <snapshotRepositoryId>snapshots</snapshotRepositoryId>
        <releaseRepositoryId>central</releaseRepositoryId>
        <unminified></unminified>
        <scmDirectory>.</scmDirectory>
        <buildVersion>0</buildVersion>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.eirslett</groupId>
                <artifactId>frontend-maven-plugin</artifactId>
                <version>${frontend-maven-plugin-version}</version>
                <executions>
                    <execution>
                        <id>install node and npm</id>
                        <goals>
                            <goal>install-node-and-npm</goal>
                        </goals>
                        <configuration>
                            <nodeVersion>${node-version}</nodeVersion>
                            <npmVersion>${npm-version}</npmVersion>
                        </configuration>
                    </execution>
                    <execution>
                        <id>npm install</id>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>install</arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>bower install</id>
                        <goals>
                            <goal>bower</goal>
                        </goals>
                        <configuration>
                            <arguments>install</arguments>
                        </configuration>
                    </execution>

                    <execution>
                        <id>grunt default</id>
                        <goals>
                            <goal>grunt</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>bower-whitesource</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.github.eirslett</groupId>
                        <artifactId>frontend-maven-plugin</artifactId>
                        <version>${frontend-maven-plugin-version}</version>
                        <executions>
                            <execution>
                                <id>install node and npm</id>
                                <goals>
                                    <goal>install-node-and-npm</goal>
                                </goals>
                                <configuration>
                                    <nodeVersion>v0.10.32</nodeVersion>
                                    <npmVersion>1.4.3</npmVersion>
                                </configuration>
                            </execution>
                            <!-- install npm modules so bower can be installed and run-->
                            <execution>
                                <id>npm install</id>
                                <goals>
                                    <goal>npm</goal>
                                </goals>
                            </execution>
                            <!-- run bower so all bower_components are present-->
                            <execution>
                                <id>bower install</id>
                                <goals>
                                    <goal>bower</goal>
                                </goals>
                            </execution>
                            <!-- CLI is required by whitesource-bower -->
                            <execution>
                                <id>npm install cli</id>
                                <goals>
                                    <goal>npm</goal>
                                </goals>
                                <configuration>
                                    <arguments>install --save-dev cli</arguments>
                                </configuration>
                            </execution>
                            <!-- install the whitesource-bower plugin -->
                            <execution>
                                <id>npm install whitesource-bower</id>
                                <goals>
                                    <goal>npm</goal>
                                </goals>
                                <configuration>
                                    <arguments>install --save-dev -g whitesource-bower</arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <!-- Run the whitesource bower plugin -->
                    <plugin>
                      <artifactId>exec-maven-plugin</artifactId>
                      <groupId>org.codehaus.mojo</groupId>
                      <version>1.2.1</version>
                      <executions>
                        <execution>
                          <id>Generate Whitesource Report and Upload</id>
                          <phase>generate-resources</phase>
                          <goals>
                            <goal>exec</goal>
                          </goals>
                          <configuration>
                            <executable>${basedir}/node/whitesource-bower${script.extension}</executable>
                          </configuration>
                        </execution>
                      </executions>
                    </plugin>
                </plugins>
            </build>
            <properties>
              <script.extension>.cmd</script.extension>
            </properties>
        </profile>
    </profiles>
</project>
